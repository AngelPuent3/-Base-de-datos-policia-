#Creacion de la clase Juez, donde mandare a llamar las clases, ladron, surcusal atraco

class JuezMain:


    def matrizJuez(self):#el usuario define el tamaño de la matriz
        j=JuezMain()
        matrizSJuez=[]
        print("Jueces")
        reglon = int(input("Ingrese el numero renglones de jueces que desea agregar"))
        columna = int(input("Ingrese el numero columnas de jueces que desea agregar"))
        for ren in range(reglon):
            listSJuez=()
            for col in range(columna):
                j.codigoJuez = int(input("Ingrese el codigo del juez \n >"))
                j.nombreSJuez = str(input("Ingrese el nombre del juez\n>"))
                j.edadJuez = int(input("Ingrese los años de servicio del juez\n>"))
            matrizSJuez.append(listSJuez)
        j.mainJuez()

    def visualizarMatriz(self,reglon, columna):
        je2=JuezMain()
        for j in range(reglon):
            for c  in range (columna):
                print(matrizSJuez[j][c], end="")
            print()
        je2.mainJuez()


    def determinarCondena(self):
        listSCondena = []
        jc = JuezMain()
        jc.numJuez=int(input("Ingrese el numero de Juez\n>"))
        jc.casoJuez=int(input("Ingrese el numerto de caso \n>"))
        jc.condena=str(input("¿Lo va condenar?\n"))
        jc.tipoCondena=str(input("¿Cual es su condena?\n >"))
        jc.tiempoCondena=int(input("Ingrese su condena en años \n >"))
        listSCondena.append(jc)

    def visualizarCondena(self):
        for jc in listSCondena:
            print("**Registro Condena juez*")
            print("-------------")
            print("Numero de Juez", jc.numuez, "\nCaso juez:", jc.casoJuez, "\n Lo va condenar?", jc.tipoCondena,
                  "\n Tipo de condena:", jc.tipoCondena,
                  "\nTiempo de condena", jc.tiempoCondena)
            print("-------------")

    def mainJuez(self):
        print("Menu Juez")
        print("---------")
        print("1.-Añadir Juez\n2.-Visualizar Juez\n3.-Determinar condena\n4.-Visualizar Condena\n ")
        opMjuez=(int(input(">")))
        if opMjuez==1:
            je=JuezMain()
            je.matrizJuez()
        elif opMjuez==2:
            je=JuezMain()
            je.visualizarMatriz()
        elif opMjuez==3:
            je = JuezMain()
            je.visualizarCondena()
        elif opMjuez==4:
            mainP()
        else:
            print("error loa regraremos al menu principal \n ", mainP())



mainP()
