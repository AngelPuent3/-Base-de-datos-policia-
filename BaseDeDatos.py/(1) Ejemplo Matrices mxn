global matrizJuez
global lista
matrizJuez=[]
lista=[]
class Juez:

    def mostrarMatriz(self):
        b=Juez()
        print("Porfavor llenar la lista mediante las siguiente indicaciones\n"
              "Numero dato 0 ---> Codogo del juez\n"
              "Numero dato 1 ---> Nombre del Juez\n"
              "Numero dato 2 ---> AÃ±os experiencia juez")
        f = input("Enterr >>>>")
        print("Ingrese el numero de jueces")
        columnas = int(input())
        matrizJuez = []
        for ren in range(columnas):
            lista = []
            for col in range(3):
                print("Numero de juez", ren,"Numero dato", col)
                a=str(input(">"))
                lista.append(a)
            matrizJuez.append(lista)
        return b.visualizarJuez()


    def visualizarJuez(self):
        print(matrizJuez)

def main():
    op=int(input("Ingrese la opcion"))
    if op==1:
        mat = Juez()
        mat.mostrarMatriz()
        main()
    elif op==2:
         mat=Juez()
         mat.visualizarJuez()
    else:
        exit("Adios")
main()
